<% if user_signed_in? %>
  <% if message.store_id.present? %>
    <div class="line">
      <div class="line__text">
        <%= image_tag 'sketto-shop-icon.png', class: 'line__text-icon' %>
        <div class="line__text-data">
          <%= message.store.name %>
        </div>
        <div class="line__text-data">
          <%= message.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
        </div>
      </div>
      <div class="line__message">
        <% if message.content.present? %>
          <p class="line__message__content">
            <%= message.content %>
          </p>
        <% end %>
        <%= image_tag message.image.url, class: 'line__message__image' if message.image.present? %>
      </div>
    </div>
  <% end %>

  <% if message.user_id.present? %>
    <div class="return-line">
      <div class="return-line__text">
        <%= image_tag 'sketto-staff_icon.png', class: 'return-line__text-icon' %>
        <div class="return-line__text-data">
          <%= message.user.name %>
        </div>
        <div class="return-line__text-data">
          <%= message.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
        </div>
      </div>
      <div class="return-line__message">
        <% if message.content.present? %>
          <p class="return-line__message__content">
            <%= message.content %>
          </p>
        <% end %>
        <%= image_tag message.image.url, class: 'return-line__message__image' if message.image.present? %>
      </div>
    </div>
  <% end %>
<% else %>
