<%= form_for group do |f| %>
  <% if group.errors.any? %>
    <div class="chat-group-form__errors">
      <h2>
        <%= "#{group.errors.full_messages.count}件のエラーが発生しました。" %>
      </h2>
      <ul>
        <% group.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="chat-group-form__field">
    <div class="chat-group-form__field--left">
      <label class="chat-group-form__label" for="chat_group_店舗を追加">店舗を追加</label>
    </div>
    <div class="chat-group-form__field--right">
      <div class="chat-group-form__search clearfix">
        <input class="chat-group-form__input" id="user-search-field" placeholder= "メッセージを送る店舗名を入力してください" type="text" >
      </div>
      <div id="user-search-result"></div>
    </div>


    <div class="chat-group-form__field--left">
    </div>
    <div class="chat-group-form__field--right">
    </div>
  </div>

  <div class="chat-group-form__field clearfix">
    <div class="chat-group-form__field--left">
      <label class="chat-group-form__label" for="chat_group_チャットメンバー">店舗一覧</label>
    </div>
    <div class="chat-group-form__field--right">
      <div class="js-add-user" id="chat-group-users">
        <input name="group[store_ids][]" type="hidden">
      </div>
    </div>
  </div>

  <div class="chat-group-form__field clearfix">
    <div class="chat-group-form__field--left"></div>
    <div class="chat-group-form__field--right">
      <%= f.submit class: 'chat-group-form__action-btn' %>
    </div>
  </div>
<% end %>

